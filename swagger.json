          },
          "500": {
            "description": "Server Error (Probably DB connection Failed)"
          }
        },
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User request for signup",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ]
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "Users"
