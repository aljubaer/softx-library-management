  "definitions": {
    "User": {
      "required": [
        "name",
        "email",
        "password"
      ],
      "properties": {
        "name": {
          "type": "string",
          "default": "new user"
        },
        "email": {
          "type": "string",
          "default": "abc@cvc.com"
        },
        "password": {
          "type": "string",
          "default": "123456"
        },
        "role": {
          "type": "string",
          "default": "STUDENT"
        }
      }
    },
    "UserLogin": {
      "required": [
        "email",
        "password"
      ],
      "properties": {
        "email": {
          "type": "string",
          "default": "abc@cvc.com"
        },
        "password": {
          "type": "string",
          "default": "123456"
        }
      }
    },
    "Book": {
      "required": [
        "bookName",
        "author",
        "genre",
        "releaseDate"
      ],
      "properties": {
        "bookName": {
          "type": "string",
          "default": "new book"
        },
        "author": {
          "type": "string",
          "default": "new author"
        },
        "genre": {
          "type": "string",
          "default": "new genre"
        },
        "releaseDate": {
          "type": "string",
          "default": "new release Date"
        }
      }
    }
  }
